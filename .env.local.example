# Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL=postgresql://crm_user:crm_password@localhost:5432/crm_dev
POSTGRES_DB=crm_dev
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-local-jwt-secret-key-here

# API Configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Frontend Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001
FRONTEND_URL=http://localhost:3000

# Development Features
NODE_ENV=development
DEBUG=true
KEEP_ALIVE_ENABLED=false

# Optional: External API Keys (for full functionality)
OPENAI_API_KEY=your-openai-key-here
WHATSAPP_API_TOKEN=your-whatsapp-token-here