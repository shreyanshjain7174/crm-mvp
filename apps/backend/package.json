{
  "name": "crm-backend",
  "version": "1.0.0",
  "description": "CRM Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/db/migrations dist/db/",
    "start": "node dist/index.js",
    "db:generate": "echo 'Database schema is managed via raw SQL migrations'",
    "db:migrate": "echo 'Database migrations are handled during server startup'",
    "db:push": "echo 'Database migrations are handled during server startup'",
    "db:studio": "echo 'Database studio not available - use your preferred PostgreSQL client'",
    "db:seed": "node seed-demo-data.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --runInBand --forceExit",
    "test:unit": "jest --testPathPattern='^(?!.*\\.integration\\.test\\.ts$).*\\.test\\.ts$'",
    "test:integration": "jest --testPathPattern='\\.integration\\.test\\.ts$'",
    "test:db:setup": "docker compose -f docker-compose.test.yml up -d",
    "test:db:teardown": "docker compose -f docker-compose.test.yml down",
    "test:with-db": "npm run test:db:setup && USE_TEST_CONTAINERS=true jest --runInBand && npm run test:db:teardown",
    "test:stats": "./scripts/run-stats-tests.sh",
    "test:stats:basic": "jest tests/routes/stats.test.ts --verbose",
    "test:stats:integration": "jest tests/routes/stats-integration.test.ts --verbose",
    "test:stats:comprehensive": "jest tests/routes/stats-comprehensive.test.ts --verbose",
    "coverage": "jest --coverage",
    "coverage:check": "jest --coverage --coverageReporters=text-summary",
    "coverage:report": "npx jest --coverage && open coverage/lcov-report/index.html",
    "ci-check": "./scripts/check-ci.sh",
    "quick-commit": "./scripts/quick-commit.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/websocket": "^8.3.1",
    "@prisma/client": "^5.7.1",
    "@types/pg": "^8.15.4",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "fastify": "^4.24.3",
    "fastify-zod": "^1.4.0",
    "ioredis": "^5.3.2",
    "isolated-vm": "^6.0.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "socket.io": "^4.7.4",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
