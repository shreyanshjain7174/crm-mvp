# Frontend Environment Variables for Vercel Deployment

# Backend API URL (replace with your actual Fly.io app URL)
NEXT_PUBLIC_BACKEND_URL=https://crm-backend-api.fly.dev

# WebSocket URL (same as backend for now, can be separate)
NEXT_PUBLIC_WS_URL=wss://crm-backend-api.fly.dev

# Demo Mode (set to false for production)
NEXT_PUBLIC_DEMO_MODE=false

# Feature Flags
NEXT_PUBLIC_AI_EMPLOYEES_ENABLED=true

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Deployment Environment
NEXT_PUBLIC_ENVIRONMENT=production