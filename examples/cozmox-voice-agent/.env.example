# Cozmox Voice Agent Configuration

# Cozmox AI API Configuration
COZMOX_API_KEY=your_cozmox_api_key_here
COZMOX_BASE_URL=https://api.cozmox.ai/v1

# Business Configuration
BUSINESS_NAME="Your Business Name"
BUSINESS_PHONE=+1234567890
BUSINESS_INDUSTRY="Your Industry"

# Voice Settings
VOICE_MODEL=professional-female
LANGUAGE=en-IN
MAX_CALL_DURATION=15

# Business Hours (24-hour format)
BUSINESS_HOURS_ENABLED=true
BUSINESS_TIMEZONE=Asia/Kolkata

# Monday
MONDAY_OPEN=09:00
MONDAY_CLOSE=18:00

# Tuesday
TUESDAY_OPEN=09:00
TUESDAY_CLOSE=18:00

# Wednesday
WEDNESDAY_OPEN=09:00
WEDNESDAY_CLOSE=18:00

# Thursday
THURSDAY_OPEN=09:00
THURSDAY_CLOSE=18:00

# Friday
FRIDAY_OPEN=09:00
FRIDAY_CLOSE=18:00

# Saturday (optional)
SATURDAY_OPEN=10:00
SATURDAY_CLOSE=16:00

# Sunday - typically closed, leave empty to disable

# Appointment Settings
APPOINTMENT_BOOKING_ENABLED=true
DEFAULT_APPOINTMENT_DURATION=30
APPOINTMENT_BUFFER_TIME=15
APPOINTMENT_REQUIRES_APPROVAL=true

# Lead Qualification Settings
LEAD_QUALIFICATION_ENABLED=true
BUDGET_WEIGHT=30
TIMELINE_WEIGHT=25
INTENT_WEIGHT=45

# Logging
LOG_LEVEL=info

# Webhook Settings (for receiving call updates)
WEBHOOK_URL=https://your-domain.com/webhooks/cozmox
WEBHOOK_SECRET=your_webhook_secret